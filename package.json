{
  "name": "ramda-validations",
  "version": "0.0.1",
  "description": "Ramda Validations helpers",
  "main": "lib/index.js",
  "files": [
    "src",
    "lib"
  ],
  "author": "Alexandre Colas <me@colasalexandre.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "NODE_PATH='.' jest",
    "build": "rollup -c",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-typescript": "^7.1.0",
    "@types/ramda": "^0.25.46",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "jest": "^23.6.0",
    "purdy": "^3.4.1",
    "regenerator-runtime": "^0.13.1",
    "rollup": "^0.67.4",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-uglify": "^6.0.0"
  },
  "dependencies": {
    "ramda": "^0.26.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "extensions": [
            ".jsx",
            ".ts"
          ],
          "root": [
            "./src"
          ]
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "moduleDirectories": [
      "./node_modules",
      "./src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "babel-jest"
    }
  }
}
